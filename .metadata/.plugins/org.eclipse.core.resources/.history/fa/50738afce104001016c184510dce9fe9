package com.jose.aerolineas.services;

import java.util.Optional;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.jose.commons.models.entity.Aerolinea;

@Service
public class AerolineaServiceImpl CommonServiceImpl<Aerolinea, AerolineaRepository> implements AerolineaService{
	@Override
	@Transactional
	public Aerolinea actualizar(Aerolinea aerolinea, Long id) {
		Optional<Aerolinea> optAerolinea = repository.findById(id);
		if(optAerolinea.isPreent()) {
			Aerolinea aerolineaDb=optAerolinea.get();
			aerolineaDb.setNombre(aerolinea.getNombre());
			aerolineaDb.setNombre(aerolinea.getNombre());
			aerolineaDb.setNombre(aerolinea.getNombre());
			aerolineaDb.setNombre(aerolinea.getNombre());
			aerolineaDb.setNombre(aerolinea.getNombre());
			repository.save(aerolineaDb);
			return aerolineaDb;
		}
	}
}
